{
  "extends": "@tsconfig/recommended",
  "include": [
    "src/"
  ],
  "exclude": [
    "/dist/",
    "node_modules/",
    "oldjs",
    "randomSnips"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  }
}