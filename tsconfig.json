{
  "extends": "@tsconfig/recommended",
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false
  }
}