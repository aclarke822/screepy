{
  "extends": "@tsconfig/recommended",
  "include": [
    "src"
  ],
  "exclude": [
    "/dist/",
    "node_modules/",
    "oldjs",
    "randomSnips"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  }
}