{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "no-loops"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": "off",
    "no-loops/no-loops": "warn",
    "semi":"warn"
  },
  "ignorePatterns": [
    "**/dist/**",
    "**/node_modules/**",
    "**/oldjs/**",
    "**/randomSnips/**"
  ]
}